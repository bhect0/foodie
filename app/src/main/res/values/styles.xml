<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="EstiloPrincipal" parent="android:Widget">
        <item name="android:textColor">#271f3a</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="EstiloPrincipalBold" parent="android:Widget">
        <item name="android:textColor">#271f3a</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EstiloPrincipalItalic" parent="android:Widget">
        <item name="android:textColor">#271f3a</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Round">
        <item name="android:background">@drawable/round_background</item>
    </style>


    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="BotonesPrincipales" parent="Widget.AppCompat.Button">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#271f3a</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BotonesSecundarios" parent="Widget.AppCompat.Button">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#271f3a</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:radius">16dp</item>
    </style>

    <style name="RoundedBox">
        <item name="android:shape">rectangle</item>
        <item name="android:textColor">#271f3a</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:radius">16dp</item>
    </style>


</resources>
